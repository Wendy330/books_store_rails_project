.card
  .card-block
    h4.card-title = product.name
    .card-text
      strong Price: 
      = number_to_currency product.price
    .card-text
      strong Description:
      = product.description
    .card-text = link_to 'details', product, class:"link_to_details"
    .card-text = button_to 'Add to cart', add_to_cart_product_path(product), method: :post, class:"add_to_cart"

